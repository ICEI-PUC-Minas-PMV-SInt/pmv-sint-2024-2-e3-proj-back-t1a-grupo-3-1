@model Projeto_1._0_eixo3_2024.Models.Cachorro

@{
    ViewData["Title"] = "Delete";
}

<h1>Remover um Cachorro</h1>

<h3>Tem certeza que deseja remover este registro?</h3>
<div>
    <h4>Cachorro</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeCachorro)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeCachorro)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NascimentoCachorro)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NascimentoCachorro)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RacaCachorro)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RacaCachorro)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdCachorro" />
        <a asp-action="Index" class="btn btn-info">Voltar</a> |
        <input type="submit" value="Apagar" class="btn btn-danger" />

    </form>
</div>
